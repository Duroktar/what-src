{
  "name": "what-src",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build:clean": "tsc -b --clean && npm run build",
    "build:docs": "typedoc --tsconfig ./tsconfig.base.json",
    "build:gh-pages": "npm run logo && npm run clean:gh-pages && npm run build:docs && lerna run build:stats && npm run copy:stats",
    "build:stats": "npm run logo && lerna run build:stats",
    "build:watch": "npm run logo && tsc -b -v --watch --pretty",
    "build:force": "tsc -b -v --pretty --force",
    "build": "tsc -b -v --pretty",
    "clean": "tsc -b --clean",
    "clean:gh-pages": "rimraf ./docs",
    "copy:stats": "./scripts/copy-website-to-docs.sh",
    "dev:stats": "lerna run dev:stats --stream",
    "lint:watch": "esw --ext .js,.jsx,.ts,.tsx --watch-ignore '/\\.git|node_modules|\\.eslintcache/' --clear -w ./packages",
    "lint:fix-dry-run": "./node_modules/.bin/eslint --ext .js,.jsx,.ts,.tsx --fix-dry-run ./packages",
    "lint:fix": "./node_modules/.bin/eslint --ext .js,.jsx,.ts,.tsx --fix ./packages",
    "lint": "./node_modules/.bin/eslint --ext .js,.jsx,.ts,.tsx ./packages",
    "logo": "./scripts/print-console-logo.sh",
    "prebuild": "lerna run logo",
    "prepublish": "npm run logo && ./scripts/clone-license.sh",
		"serve:gh-pages": "npm run logo && serve -l 9000 ./docs"
  },
  "engines": {
    "node": ">= 6.9.0 < 13.0.0",
    "npm": ">= 3.x <= 6.x",
    "yarn": ">=0.27.5 || >=1.0.0-20170811"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.base.json"
      }
    },
    "testPathIgnorePatterns" : [
      "/node_modules/",
      "/dist/"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
		"@types/jest": "^24.0.18",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-watch": "^6.0.1",
    "handlebars": "^4.3.2",
		"jest": "^24.9.0",
    "lerna": "^3.16.4",
    "rimraf": "^3.0.0",
    "serve": "^11.2.0",
		"ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.3"
  }
}
